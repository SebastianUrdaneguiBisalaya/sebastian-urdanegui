---
import Layout from "@layouts/Layout.astro";
import Table from "@components/table";
const lang = Astro.currentLocale;
---

<Layout>
    <main class="py-4">
        <div class="flex flex-col items-center justify-start w-full">
            <Table
                lang={lang ?? ""}
                type="blog"
            />
        </div>
    </main>
</Layout>

import Layout from "@layouts/Layout.astro";
import { getEntry, render } from "astro:content";

interface Comment {
  id: string;
  user_name?: string;
  comment: string;
}

const { id } = Astro.params;

console.log("id", id);

if (!id) {
  return Astro.redirect("/404");
}

const entry = await getEntry("spanishBlog", id);

if (!entry) {
  return Astro.redirect("/404");
}

const { Content } = await render(entry);
